<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_edit_info"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_top_edit_info"
        android:text="Tạo Playlist"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập tên playlist"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/namePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name playlist"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:background="@drawable/border_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_no_thank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="No, thanks"
                android:textColor="@color/black"
                android:backgroundTint="@color/button_background_color_gray"
                android:layout_marginRight="10dp"
                android:alpha="0.4"/>
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="Ok"
                android:textColor="@color/black"
                android:backgroundTint="@color/button_background_color"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>